<h1><%= @contact.full_name %></h1>
<ul>
  <li><b>First name:</b> <%= @contact.first_name %></li>
  <li><b>Last name:</b> <%= @contact.last_name %></li>
  <li><b>Email:</b> <a href="mailto:<%= @contact.email %>"><%= @contact.email %></a></li>
  <li><b>Notes:</b> <%= @contact.note %></li>
</ul>
<form action='/contacts/<%= @contact.id %>' method='post'>
  <input type='hidden' name='_method' value='delete'>
  <p>
    <button><a href="/contacts/<%= @contact.id %>/edit">Edit</a></button>
    <button type="submit">Delete Contact</button>
  </p>
</form>
<a href="/contacts">Back to Contacts</a>
